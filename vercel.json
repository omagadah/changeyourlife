{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net https://www.gstatic.com https://code.tidio.co https://unpkg.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://changeyourlife-cc210.firebaseapp.com https://firestore.googleapis.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com wss:; frame-ancestors 'none';"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    { "source": "/journal", "destination": "/yourlife", "permanent": true },
    { "source": "/dashboard.html", "destination": "/app", "permanent": true },
    { "source": "/app.html", "destination": "/app", "permanent": true },
    { "source": "/inscription.html", "destination": "/login", "permanent": true },
    { "source": "/login.html", "destination": "/login", "permanent": true },
    { "source": "/settings.html", "destination": "/settings", "permanent": true },
    { "source": "/profile.html", "destination": "/profile", "permanent": true },
    { "source": "/journal.html", "destination": "/yourlife", "permanent": true },
    { "source": "/signup", "destination": "/login", "permanent": true }
  ]
}